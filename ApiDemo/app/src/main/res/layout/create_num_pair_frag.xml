<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTipBg">


    <include
        android:id="@+id/create_numpair_title"
        layout="@layout/base_header"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <RelativeLayout
        android:id="@+id/rl_match_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_below="@+id/create_numpair_title">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/match_number"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:padding="12dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_create_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_match_number"
        android:background="@drawable/button_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_group"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:padding="12dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_get_free_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_below="@+id/rl_create_group">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_free_num"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:padding="12dp"/>
    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_get_free_num"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine"/>


</RelativeLayout>