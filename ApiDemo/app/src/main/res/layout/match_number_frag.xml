<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTipBg">


    <include
        android:id="@+id/create_numpair_title"
        layout="@layout/base_header"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/tv_match_number_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_numpair_title"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="@string/match_number_tip" />

    <RelativeLayout
        android:id="@+id/rl_seller_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_match_number_tip">

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_below="@+id/line"
            android:text="@string/seller_phone"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_seller_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="end"
            android:padding="12dp"
            android:hint="@string/enter_attendance_phone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_buyer_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_seller_phone">

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_below="@+id/line1"
            android:text="@string/buyer_phone"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/et_buyer_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="end"
            android:padding="12dp"
            android:hint="@string/enter_attendance_phone" />
        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine"
            android:layout_below="@+id/et_buyer_phone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_match_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:layout_marginTop="40dp"
        android:layout_below="@id/rl_buyer_phone">

        <View
            android:id="@+id/line_receive1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine" />

        <TextView
            android:id="@+id/tv_match_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/match_number"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="17sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/line_receive2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine"
            android:layout_below="@id/tv_match_number"/>

    </RelativeLayout>

</RelativeLayout>