<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTipBg">


    <include
        android:id="@+id/query_free_number_title"
        layout="@layout/base_header"
        android:layout_width="match_parent"
        android:layout_height="60dp" />



    <RelativeLayout
        android:id="@+id/rl_query_free_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/query_free_number_title"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_bg">

        <View
            android:id="@+id/line_receive1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine" />

        <TextView
            android:id="@+id/tv_create_group"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/query_free_numbers"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="17sp" />

        <View
            android:id="@+id/line_receive2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tv_create_group"
            android:background="@color/colorLine" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_query_free_num_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_query_free_numbers"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="@string/number_list_tip"/>

    <TextView
        android:id="@+id/tv_show_numbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp"
        android:layout_below="@+id/tv_query_free_num_tip"/>

</RelativeLayout>