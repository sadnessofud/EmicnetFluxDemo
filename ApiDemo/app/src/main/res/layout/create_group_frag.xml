<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTipBg">


    <include
        android:id="@+id/create_group_title"
        layout="@layout/base_header"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/tv_create_group_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_group_title"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="@string/create_group_tip" />

    <EditText
        android:id="@+id/et_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_create_group_tip"
        android:background="@color/white"
        android:hint="@string/enter_group_name_tip"
        android:textColor="@android:color/darker_gray"
        android:gravity="center_vertical"
        android:padding="12dp"/>

    <RelativeLayout
        android:id="@+id/rl_create_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_bg"
        android:layout_below="@+id/et_group_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:id="@+id/line_receive1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorLine" />

        <TextView
            android:id="@+id/tv_create_group"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/create_group"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="17sp" />

        <View
            android:id="@+id/line_receive2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tv_create_group"
            android:background="@color/colorLine" />

    </RelativeLayout>

</RelativeLayout>